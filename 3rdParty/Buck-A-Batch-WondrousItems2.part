  <RulesElement name="Skull Swarm Bag (heroic tier)" type="Magic Item" internal-id="ID_EOF_MAGIC_ITEM_11005_27" source="Buck-A-Batch Wondrous Items 2" revision-date="6/26/2011 12:15 AM">
