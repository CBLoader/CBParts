  <RulesElement name="Talenta Weapon Training" type="Feat" internal-id="ID_FMP_FEAT_1411" source="Eberron Player's Guide" revision-date="8/27/2010 12:19 PM">
    <Prereqs> Halfling, Talenta Plains background </Prereqs>
    <print-prereqs> Halfling, Talenta Plains background </print-prereqs>
    <specific name="Tier"> Heroic </specific>
    <specific name="Short Description"> Gain a damage bonus and proficiency with Talenta boomerang, Talenta sharrash, and Talenta tangat </specific>
    <specific name="Special"/>
    <specific name="type"/>
    <specific name="Associated Power Info"/>
    <specific name="Associated Powers"/>
    <rules>
      <grant name="ID_INTERNAL_PROFICIENCY_WEAPON_PROFICIENCY_(TALENTA_BOOMERANG)" type="Proficiency"/>
      <grant name="ID_INTERNAL_PROFICIENCY_WEAPON_PROFICIENCY_(TALENTA_SHARRASH)" type="Proficiency"/>
      <grant name="ID_INTERNAL_PROFICIENCY_WEAPON_PROFICIENCY_(TALENTA_TANGAT)" type="Proficiency"/>
      <statadd name="Talenta Boomerang:damage" value="+2" type="Feat"/>
      <statadd name="Talenta Sharrash:damage" value="+2" type="Feat"/>
      <statadd name="Talenta Tangat:damage" value="+2" type="Feat"/>
      <statadd name="Talenta Boomerang:damage" value="+3" type="Feat" requires="Paragon Tier"/>
      <statadd name="Talenta Sharrash:damage" value="+3" type="Feat" requires="Paragon Tier"/>
      <statadd name="Talenta Tangat:damage" value="+3" type="Feat" requires="Paragon Tier"/>
      <statadd name="Talenta Boomerang:damage" value="+4" type="Feat" requires="Epic Tier"/>
      <statadd name="Talenta Sharrash:damage" value="+4" type="Feat" requires="Epic Tier"/>
      <statadd name="Talenta Tangat:damage" value="+4" type="Feat" requires="Epic Tier"/>
    </rules>
You gain proficiency and a +2 feat bonus to damage rolls with the Talenta boomerang, the Talenta sharrash, and the Talenta tangat.  This bonus increases to +3 at 11th level and +4 at 21st level.
   </RulesElement>
